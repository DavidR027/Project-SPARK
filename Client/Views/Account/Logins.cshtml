@model Client.ViewModels.LoginVM

@{
    ViewData["Title"] = "Login";
    Layout = "_LayoutLogin";
}

<head>
    <style>
        ul {
           text-align:center;
            list-style-type: none;
            margin-bottom:3px;
        }
    </style>
</head>

<div class="limiter">
    <div class="container-login100" style="background-image: url('/Login/images/bg-01.jpg');">
        <div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-54">
            <form asp-action="Logins" class="login100-form validate-form">
                <span class="login100-form-title p-b-49">
                    Login
                </span>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="wrap-input100 validate-input m-b-23 text-danger">
                    <label class="label-input100">Username</label>
                    <input asp-for="Username" id="form3Example3" class="input100"
                           placeholder="Enter Username or Email" />
                    <span asp-validation-for="Username" class="focus-input100" data-symbol="&#xf206;"></span>
                </div>

                <div class="wrap-input100 validate-input">
                    <label class="label-input100">Password</label>
                    <div class="password-input-container">
                        <input asp-for="Password" id="form3Example4" class="input100" placeholder="Enter Password" type="password" />
                        <span asp-validation-for="Password" class="focus-input100" data-symbol="&#xf190;"></span>
                    </div>
                </div>
                @*<div class="password-toggle-container">
                    <input type="checkbox" id="showPasswordToggle" class="password-toggle" onclick="togglePasswordVisibility()">
                    <label for="showPasswordToggle" class="password-toggle-label">Show Password</label>
                </div>*@


                <div class="text-right p-t-8 p-b-31">
                    <a href="/Account/ForgotPassword">
                        Forgot password?
                    </a>
                </div>

                <div class="container-login100-form-btn">
                    <div class="wrap-login100-form-btn">
                        <div class="login100-form-bgbtn"></div>
                        <button class="login100-form-btn" value="Create" type="submit">
                            Login
                        </button>
                    </div>
                </div>

                <div class="flex-col-c p-t-155">
                    <span class="txt1 p-b-17">
                        Don't have an account?
                    </span>

                    <a class="link-danger" type="submit" data-bs-toggle="modal" data-bs-target="#exampleModal">
                        Register
                    </a>

                    <div class="d-flex justify-content-center mx-4 mb-1">
                        <a asp-controller="Event" asp-action="Index"><span>&#8592;</span> Back to home</a>
                    </div>

                    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h1 class="modal-title fs-5" id="exampleModalLabel">Register</h1>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <p>You want to register as: </p>
                                </div>
                                <div class="modal-footer justify-content-center d-flex">
                                    <a type="submit" asp-action="Registers">User</a>
                                    <p>Or</p>
                                    <a type="submit" asp-action="RegisterEM">Event Maker</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

<script>
    function togglePasswordVisibility() {
        var passwordInput = document.getElementById("form3Example4");
        var showPasswordToggle = document.getElementById("showPasswordToggle");

        if (showPasswordToggle.checked) {
            passwordInput.type = "text";
        } else {
            passwordInput.type = "password";
        }
    }

</script>

