@model Client.ViewModels.ChangePasswordVM

@{
    ViewData["Title"] = "ChangePassword";
    Layout = "_LayoutLogin";
    var email = TempData["Email"];
}

<div class="limiter">
    <div class="container-login100" style="background-image: url('/Login/images/bg-01.jpg');">
        <div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-54">
            <form asp-action="ChangePassword" class="login100-form validate-form">
                <span class="login100-form-title p-b-49">
                    Change Password
                </span>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="wrap-input100 validate-input m-b-23 text-danger" hidden>
                    <label class="label-input100">Email</label>
                    <input asp-for="Email" id="form3Example3" class="input100"
                           value=@email readonly />
                    <span asp-validation-for="Email" class="focus-input100" data-symbol="&#xf206;"></span>
                </div>

                <div>
                    <div class="wrap-input100 validate-input m-b-23 text-danger">
                        <label class="label-input100">OTP</label>
                        <input asp-for="OTP" id="form3Example3" class="input100" />
                        <span class="focus-input100" data-symbol="&#xf206;"></span>
                    </div>
                    <span asp-validation-for="OTP" class="text-danger"></span>
                </div>

                <div>
                    <div class="wrap-input100 validate-input m-b-23 text-danger">
                        <label class="label-input100">New Password</label>
                        <input asp-for="NewPassword" id="form3Example3" class="input100" />
                        <span class="focus-input100" data-symbol="&#xf206;"></span>
                    </div>
                    <span asp-validation-for="NewPassword" class="text-danger" style="font-size:14px; margin-top:5px; margin-bottom:10px"></span>
                </div>


                <div>
                    <div class="wrap-input100 validate-input m-b-23 text-danger">
                        <label class="label-input100">Confirm Password</label>
                        <input asp-for="ConfirmPassword" id="form3Example3" class="input100" />
                        <span class="focus-input100" data-symbol="&#xf206;"></span>
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger" style="font-size:14px; margin-top:5px; margin-bottom:10px"></span>

                </div>


                <div class="container-login100-form-btn">
                    <div class="wrap-login100-form-btn">
                        <div class="login100-form-bgbtn"></div>
                        <button class="login100-form-btn" value="Create" type="submit">
                            Submit
                        </button>
                    </div>
                </div>

                <div class="d-flex justify-content-center mx-4 mb-1">
                    <a asp-controller="Account" asp-action="ForgotPassword"><span>&#8592;</span> Back</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
