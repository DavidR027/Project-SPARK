@model Client.Models.Payment

@{
    ViewData["Title"] = "Delete";
    Layout = "_Layout";
}

<head>
    <style>
        .align-items-center {
            background-color: #101130;
        }

        .card {
            box-sizing: border-box;
            background: rgba(217, 217, 217, 0.58);
            border: 1px solid white;
            box-shadow: 2px 2px 50px rgba(0, 0, 0, 0.22);
            backdrop-filter: blur(6px);
            border-radius: 17px;
            text-align: center;
            cursor: pointer;
            transition: all 0.2s;
            display: flex;
            align-items: center;
            justify-content: center;
            user-select: none;
            font-weight: bolder;
            color: black;
        }

            .card:hover {
                border: 2px solid #5D3FD3;
            }

            .card:active {
                transform: scale(0.95) rotateZ(1.7deg);
            }
    </style>
</head>

<div class="mt-100" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content rounded-0">
            <div class="card modal-body p-4 px-5">


                <form asp-action="Remove" method="post">
                    <div class="main-content text-center" style="width:450px;">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <label for="">Delete Payment</label>
                        <p class="mb-4">Are you sure you want to Invalidate (delete) this payment?</p>
                        <div class="form-group mb-4">
                            <div class="form-group">
                                <label asp-for="Guid" class="control-label"></label>
                                <input asp-for="Guid" class="form-control" />
                                <span asp-validation-for="Guid" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="UserGuid" class="control-label"></label>
                                <input asp-for="UserGuid" class="form-control" />
                                <span asp-validation-for="UserGuid" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="EventGuid" class="control-label"></label>
                                <input asp-for="EventGuid" class="form-control" />
                                <span asp-validation-for="EventGuid" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-10">
                                <label asp-for="Invoice" class="control-label"></label>
                                <div>
                                    <img style="width:100px; height:100px;" class="" src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Invoice)" alt="Poster" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex">
                        <div class="mx-auto">
                            <input type="hidden" name="guid" value="@Model.Guid" />
                            <input type="hidden" name="userGuid" value="@Model.UserGuid" />
                            <input type="hidden" name="eventGuid" value="@Model.EventGuid" />
                            <a href="javascript:history.back();" class="btn btn-primary">Back</a>
                            <input type="submit" value="Delete" class="btn btn-danger" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>









