﻿@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>401 - Not Found</title>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:300,700" rel="stylesheet">
    <link rel="stylesheet" href="~/css/errormsg.css" asp-append-version="true" />

</head>

<body>

    <div class="container">
        <div class="error-code">404</div>
        <div class="error-text">Not Found</div>
        <div class="error-description">Oops! It seems the page you are looking for does not exist.</div>
        <br />
        <a asp-action="Index">Back to Home</a>
    </div>

</body>

<script>
    let timer = 5
    setInterval(() => {
        document.getElementById('countdown').innerHTML = timer;
        timer--;

        if (timer === 0) {
            location.href = "/Event/Index";
        }
    }, 1000)
</script>
</html>
